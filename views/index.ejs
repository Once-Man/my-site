<%- include('./layouts/header.ejs') %>
<%- include('./layouts/navbar.ejs') %>


    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if(message){ %>
                    <div class="alert-dismissible alert fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong><%= message.message %></strong>
                    </div>
                <% } %>
                <div class="table-responsive">
                    <table class="table-striped table text-center my-3">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>E-Mail</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                           <% users.forEach((row, index)=> { %>
                            <tr class="align-middle">
                                <td><%= index %></td>
                                <td><img src="<%= row.image %>" width="50" class="img-thumbnail" alt=""></td>
                                <td><%= row.name %></td>
                                <td><%= row.email %></td>
                                <td><%= row.phone %></td>
                                <td>
                                    <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    
                                    <form action="/delete/<%= row._id %>?_method=DELETE" method="POST">
                                        <button type="submit"><i class="fas fa-trash fa-lg mx-1"></i></button>
                                    </form>
                                </td>
                            </tr>
                           <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


<%- include('./layouts/footer.ejs') %>


